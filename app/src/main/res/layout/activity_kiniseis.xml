<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kiniseis">


    <TextView
        android:id="@+id/ID"
        android:layout_width="130dp"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:text="Κωδικός" />

    <EditText
        android:id="@+id/editID"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/ID"

        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_below="@id/editID"
        android:background="@android:color/holo_green_light"
        android:numColumns="2"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="375dp" />

    <CalendarView
        android:id="@+id/calendarView7"
        android:layout_width="339dp"
        android:layout_height="288dp"
        android:layout_below="@id/apoHmer"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="11dp" />




    <TextView
        android:id="@+id/textView2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/button33"
        android:text="από" />

    <TextView
        android:id="@+id/apoHmer"
        android:layout_width="90dp"

        android:layout_height="wrap_content"
        android:layout_below="@id/grid"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/apoHmer"
        android:text="εως" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid"
        android:layout_alignTop="@+id/textView44"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/textView44" />

    <Button
        android:id="@+id/button33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="send_email"
        android:text="email"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="683dp" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@id/button33"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/showkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/apoHmer"
        android:layout_alignParentRight="true"
        android:onClick="showkin"
        android:text="Κινήσεις" />


</RelativeLayout>